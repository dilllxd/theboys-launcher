{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "TheBoys Launcher",
  "version": "1.1.0",
  "identifier": "com.theboys.launcher",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000/",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "TheBoys Launcher",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["main"]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Game",
    "shortDescription": "A Minecraft modpack launcher",
    "longDescription": "TheBoys Launcher - A portable Minecraft bootstrapper for Windows, macOS, and Linux",
    "copyright": "Copyright c 2024 TheBoys Team. All rights reserved.",
    "licenseFile": "LICENSE",
    "windows": {
      "nsis": {
        "displayLanguageSelector": true
      }
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": ["https://releases.theboys-launcher.com/{target}/{arch}/{current_version}"],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ5MEM0MUM5MkY0MDREQ0M5MUY3M0M1MTU1NjIwRjlDM0VGMTM2RkQwOQ==",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
